generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model Product {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id])

  name       String
  sku        String?       @unique
  price      Decimal       @db.Decimal(12, 2)
  quantity   Int           @default(0)
  lowStockAt Int?
  sold       SoldProduct[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, name])
  @@index([sku])
}

model SoldProduct {
  id        String   @id @default(cuid())
  quantity  Int      @default(0)
  createdAt DateTime @default(now())

  product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model User {
  id         String  @id @default(cuid())
  name       String
  email      String  @unique
  password   String
  code       Int
  isVerified Boolean @default(false)
  imageUrl   String?

  products Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}
